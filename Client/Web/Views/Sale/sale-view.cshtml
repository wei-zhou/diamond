<div class="modal fade" id="sale-view" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <fieldset>
                                <legend>基本信息</legend>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-receipt-number">收据单号</label>
                                            <input type="text" class="form-control input-sm" readonly="readonly" id="sale-view-receipt-number" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-saler">销售姓名</label>
                                            <select class="form-control input-sm" id="sale-view-saler">
                                                <option value=""></option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-created">创建日期</label>
                                            <input type="text" class="form-control input-sm" readonly="readonly" id="sale-view-created" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-created-by">创建账号</label>
                                            <input type="text" class="form-control input-sm" readonly="readonly" id="sale-view-created-by" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-modified">修改日期</label>
                                            <input type="text" class="form-control input-sm" readonly="readonly" id="sale-view-modified" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-modified-by">修改账号</label>
                                            <input type="text" class="form-control input-sm" readonly="readonly" id="sale-view-modified-by" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset id="sale-view-customer-info">
                                <legend>客户信息</legend>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="sale-view-name">客户姓名</label>
                                            <input type="text" class="form-control input-sm" id="sale-view-name" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset id="sale-view-line-info">
                                <legend>商品信息</legend>
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label for="sale-view-total-price">总价</label>
                                            <input type="text" class="form-control input-sm" id="sale-view-total-price" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" id="sale-view-edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 修改</button>
                <button type="button" class="btn btn-warning btn-sm" id="sale-view-save"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> 保存</button>
                <button type="button" class="btn btn-danger btn-sm" id="sale-view-delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 删除</button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>