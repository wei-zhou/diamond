@{ Layout = "~/Views/Shared/_PublicLayout.cshtml"; }
<div id="login" class="container">
    <header class="page-header">
        <h1>用户登录</h1>
    </header>
    <div class="row">
        <form class="form-horizontal" action="/account/login" method="post">
            <fieldset>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                        <div class="form-group">
                            <label class="col-md-3 col-sm-4 control-label" for="login-name">用户名</label>
                            <div class="col-md-9 col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                    </span>
                                    <input type="text" class="form-control input-sm" id="login-name" name="name" autofocus="autofocus" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                        <div class="form-group">
                            <label class="col-md-3 col-sm-4 control-label" for="login-password">密码</label>
                            <div class="col-md-9 col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                                    </span>
                                    <input type="password" class="form-control input-sm" id="login-password" name="password" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                        <p id="login-message" class="alert alert-danger" role="alert">登录失败，请确认用户名或者密码是否正确。</p>
                    </div>
                </div>
                <div class="row text-center">
                    <button type="submit" class="btn btn-primary" id="login-button"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> 登录</button>
                </div>
                @Html.AntiForgeryToken()
                @Html.AjaxAntiForgeryToken()
            </fieldset>
        </form>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(function () {
            $home.pages.login.init();
        });
    </script>
}